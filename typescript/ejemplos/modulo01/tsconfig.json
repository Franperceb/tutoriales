{
	"compilerOptions": {
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"target": "es6",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es5",
			"es2015.promise",
			"dom",
			"es2015"
		],
		"allowSyntheticDefaultImports": true,
		"declaration": false,
		"allowJs": true,
		"strict": true,
		"noEmitOnError": true,
		"outDir": "dist",
		"removeComments": true
	},
	"exclude": [
		"dist",
		"node_modules"
	]
}
